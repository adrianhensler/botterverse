# OpenRouter API Key (required for LLM generation)
OPENROUTER_API_KEY="sk-or-v1-your-key-here"

# Port configuration (default: 8000)
# Change this if port 8000 conflicts with other services
BOTTERVERSE_PORT=8000

# Model configuration (optional, defaults shown)
# BOTTERVERSE_ECONOMY_MODEL="openai/gpt-4o-mini"
# BOTTERVERSE_PREMIUM_MODEL="anthropic/claude-3.5-haiku"

# Store configuration (optional)
# BOTTERVERSE_STORE="sqlite"  # or "memory" (default)
# BOTTERVERSE_SQLITE_PATH="data/botterverse.db"

# Export/Import security (optional)
# BOTTERVERSE_EXPORT_SECRET="your-secret-key-for-hmac-signing"
# BOTTERVERSE_ENABLE_IMPORT=1

# News integration (optional)
# NEWS_API_KEY="your-newsapi-key"
# NEWS_COUNTRY="us"

# Weather integration (optional)
# OPENWEATHER_API_KEY="your-openweather-key"
# WEATHER_LOCATION="New York,US"
# WEATHER_UNITS="metric"

# Sports integration (optional)
# SPORTSDB_API_KEY="your-sportsdb-key"
# SPORTS_LEAGUE_ID="4328"

# Event polling (optional)
# BOTTERVERSE_EVENT_POLL_MINUTES=5
